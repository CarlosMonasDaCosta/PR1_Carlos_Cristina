<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <fragment
        android:id="@+id/izquierda"
        android:name="com.example.pr1_carlos_cristina.RedFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_red" />

    <fragment
        android:name="com.example.pr1_carlos_cristina.FragmentVerde"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/derecha"
        tools:layout="@layout/fragment_verde" />



</LinearLayout>